{
    "name": "forge/html-widgets",
    "type": "library",
    "description": "Widgets para generación de código HTML.",
    "keywords": [
        "php",
        "html",
        "widgets"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "forge/html": "^1.0@dev",
        "forge/test-utils": "^1.0@dev",
        "forge/widget": "^1.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "roave/infection-static-analysis-plugin": "*",
        "vimeo/psalm": "*"
    },
    "autoload": {
        "psr-4": {
            "Forge\\Html\\Widgets\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forge\\Html\\Widgets\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
